{
  "name": "piera-tech",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "type-check": "tsc",
    "format": "prettier --write \"**/*.+(ts|js|tsx|json)\" ",
