    "@mui/icons-material": "^5.2.0",
    "@mui/material": "^5.2.1",
    "clsx": "^1.1.1",
    "graphql": "^16.0.1",
    "graphql-tag": "^2.12.6",
    "next": "12.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "^6.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.3.0",
    "@graphql-codegen/near-operation-file-preset": "^2.2.2",
