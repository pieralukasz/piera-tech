    "@types/jest": "^27.0.3",
    "@types/node": "16.11.10",
    "@types/react": "17.0.36",
    "@types/react-dom": "^17.0.11",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "7",
    "eslint-config-next": "12.0.4",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "madge": "^5.0.1",
    "msw": "^0.35.0",
    "prettier": "^2.4.1",
    "typescript": "4.5.2"
